{
  "name": "teeny-static-server",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Arno Versini",
  "description": "A small configurable static server powered by Express",
  "homepage": "https://github.com/aversini/teeny-static-server",
  "repository": {
    "type": "git",
    "url": "git@github.com:aversini/teeny-static-server.git"
  },
  "bin": {
    "teeny-static-server": "bin/teeny-static-server.js"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "bump": "node ./configuration/release/index.js -t bump",
    "dev": "nodemon bin/teeny-static-server.js -- --config config.js",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -p angular -c changelog.json",
    "lint:fix": "eslint --fix --color \"./configuration/**/*.js\" \"./src/**/*.js\" \"./bin/**/*.js\"",
    "lint": "eslint --color \"./configuration/**/*.js\" \"./src/**/*.js\" \"./bin/**/*.js\"",
    "prettier:fix": "prettier --loglevel error --write \"src/**/*.{js,jsx}\"",
    "prettier:all": "npm-run-all --serial prettier:fix lint:js:fix",
    "release": "node ./configuration/release/index.js -t release",
    "start": "node bin/teeny-static-server.js"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "11.0.0",
    "@commitlint/cli": "11.0.0",
    "async": "2.6.1",
    "babel-eslint": "10.1.0",
    "compare-versions": "3.6.0",
    "conventional-changelog-cli": "2.1.1",
    "cross-env": "7.0.3",
    "eslint": "7.17.0",
    "husky": "4.3.6",
    "inquirer": "7.3.3",
    "kleur": "4.1.3",
    "lint-staged": "10.5.3",
    "lodash.isboolean": "3.0.3",
    "luxon": "1.25.0",
    "memoize-one": "5.1.1",
    "npm-run-all": "4.1.5",
    "nodemon": "2.0.6",
    "papaparse": "5.3.0",
    "prettier": "2.2.1",
    "semver": "7.3.4",
    "shelljs": "0.8.4",
    "tslint": "6.1.3",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "compression": "1.7.4",
    "connect-ensure-login": "0.1.1",
    "connect-flash": "0.1.1",
    "express": "4.17.1",
    "express-session": "1.17.1",
    "fs-extra": "9.0.1",
    "helmet": "4.3.1",
    "lowdb": "1.0.0",
    "memorystore": "1.6.4",
    "morgan": "1.10.0",
    "nanoid": "3.1.20",
    "passport": "0.4.1",
    "passport-local": "1.0.0",
    "serve-favicon": "2.5.0",
    "yargs": "16.2.0"
  }
}
